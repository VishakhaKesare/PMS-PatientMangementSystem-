@model List<PatientManagementSoftware.Models.MedicalRecordViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper p-5">

    <h2>Medical Records</h2>
    <br />
    <div class="row" style="margin-bottom:10px;">

        <div class="col-2">
            <a href="@Url.Action("AddMedicalRecord", "MedicalRecords")" class="btn btn-primary">Add Records</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Record ID</th>
                <th>Patient ID</th>
                <th>Doctor ID</th>
                <th>Diagnosis</th>
                <th>Treatment</th>
                <th>Medications</th>
                <th>Blood Group</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var medicalRecords in Model)
            {
                <tr>
                    <td>@medicalRecords.RecordID</td>
                    <td>@medicalRecords.PatientName</td>
                    <td>@medicalRecords.DoctorName</td>
                    <td>@medicalRecords.Diagnosis</td>
                    <td>@medicalRecords.Treatment</td>
                    <td>@medicalRecords.Medications</td>
                    <td>@medicalRecords.BloodGroup</td>

                    <td>
                        <a href="@Url.Action("Edit", "MedicalRecords", new { id = medicalRecords.RecordID})" class="btn btn-primary">Edit</a>
                        <form method="post" action="@Url.Action("DeleteMedicalRecords", "MedicalRecords", new {id = medicalRecords.RecordID })" onsubmit="return confirm('Are you sure you want to delete this Records?');" style="display: inline-block; margin-right: 3px;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                       @* <a href="@Url.Action("Delete", "MedicalRecords", new { id = medicalRecords.RecordID})" class="btn btn-primary">Edit</a>*@

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>