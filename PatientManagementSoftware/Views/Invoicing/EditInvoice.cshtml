@model PatientManagementSoftware.Models.BillingViewModel
@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper p-5">
    <h2 class="form-signin-heading">Create Invoice</h2>

    @using (Html.BeginForm("UpdateInvoice", "Invoicing", FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()

        <h2 class="form-signin-heading"></h2>

        <div class="form-group mb-2">
            @Html.HiddenFor(model => model.BillID);
            @Html.LabelFor(model => model.PatientName, new { @class = "form-label" })
            @Html.DropDownListFor(model => model.PatientID, new SelectList(ViewBag.list1, "PatientID", "Name"), "--Select Patient--", new { @class = "form-control", type = "text" })
            @Html.ValidationMessageFor(m => m.PatientID, "", new { @class = "form-text text-muted" , required = "required" })

        </div>

        <div class="form-group mb-2">
            @Html.LabelFor(model => model.BillDate, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.BillDate, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.BillDate, "", new { @class = "form-text text-muted" , required = "required" })
        </div>

        <div class="form-group mb-2">
            @Html.LabelFor(model => model.Amount, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", type = "text" })
            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "form-text text-muted" , required = "required" })
        </div>

        <div class="form-group mb-2">
            @Html.LabelFor(model => model.PaymentStatus, new { @class = "form-label" })
            @Html.DropDownListFor(model => model.PaymentStatus, new SelectList(new[]
            {
                new SelectListItem { Text = "Paid", Value = "Paid" },
                new SelectListItem { Text = "Unpaid", Value = "Unpaid" }
            }, "Value", "Text"), "Select Payment Status", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PaymentStatus, "", new { @class = "form-text text-muted" , required = "required" })
        </div>


        <button class="btn btn-lg btn-primary btn-block mb-2" type="submit">Submit</button>
    }


</div>


