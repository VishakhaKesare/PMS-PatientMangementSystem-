@model PatientManagementSoftware.Models.BillingViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper p-5">
    <h2>Invoice</h2>
    <br />
    <div class="row" style="margin-bottom:10px;">

        <div class="col-2">
            <a href="@Url.Action("Invoice", "Invoicing")" class="btn btn-primary">Crete Invoice</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Bill ID</th>
                <th>Patient Id</th>
                <th>Patient Name</th>
                <th>BillDate</th>
                <th>Amount</th>
                <th>Payment Status</th>
                <th>Action</th>
                <!-- Add other demographic information columns here if needed -->
            </tr>
        </thead>
        <tbody>

            @foreach (var Billing in ViewBag.list)
            {
                <tr>
                    <td>@Billing.BillID</td>
                    <td>@Billing.PatientID</td>
                    <td>@Billing.PatientName</td>
                    <td>@Billing.BillDate</td>
                    <td>@Billing.Amount</td>
                    <td>@Billing.PaymentStatus</td>
                    <td>
                        <a href="@Url.Action("EditInvoice", "Invoicing", new { billID = Billing.BillID })" class="btn btn-info">Edit</a>
                        <form method="post" action="@Url.Action("DeleteInvoice", "Invoicing", new { billId = Billing.BillID })" onsubmit="return confirm('Are you sure you want to delete this invoice?');" style="display: inline-block; margin-right: 3px;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        @if (Billing.PaymentStatus == "Paid")
                        {
                            <a href="@Url.Action("PrintInvoice", "Invoicing", new { billId = Billing.BillID })" target="_blank" class="btn btn-success">Print</a>
                        }
                        else
                        {
                            <button class="btn btn-success" disabled>Print</button>
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>