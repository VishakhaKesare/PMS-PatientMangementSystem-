@model PatientManagementSoftware.Models.BillingViewModel
@{

    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice Template</title>
    <script src="https://printjs-4de6.kxcdn.com/print.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Global styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        /* Navbar styles */
        .navbar {
            background-color: #333;
            color: #fff;
            padding: 10px;
        }

        .navbar-brand {
            color: #fff;
            font-weight: bold;
        }

        .navbar-nav {
            float: right;
        }

        .nav-item {
            margin-left: 10px;
        }

        .nav-link {
            color: #fff;
        }

        /* Invoice wrapper */
        .invoice-wrapper {
            background-color: #fff;
            padding: 30px;
            border: 5px solid #5cb85c;
            border-radius: 15px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }

        /* Invoice header */
        .invoice-header {
            background-color: #5cb85c;
            color: #fff;
            padding: 20px;
            border-radius: 10px 10px 0 0;
            margin-bottom: 20px;
        }

        /* Invoice address */
        .invoice-address {
            margin-bottom: 20px;
        }

        /* Invoice body */
        .invoice-body {
            padding: 20px;
            background-color: #d9f4d9;
            border-radius: 0 0 10px 10px;
        }

        /* Invoice table */
        .invoice-table th,
        .invoice-table td {
            border: 2px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .invoice-table th {
            background-color: #f2f2f2;
        }

        .invoice-total td {
            border-top: 2px solid #ddd;
        }

        .invoice-total .text-right {
            font-weight: bold;
        }

        /* Invoice footer */
        .invoice-footer {
            background-color: #5cb85c;
            color: #fff;
            padding: 20px;
            border-radius: 0 0 10px 10px;
        }

        /* Print button */
        .print-button-container {
            text-align: center;
            margin-top: 20px;
        }

        #print {
            background-color: #5cb85c;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
</head>
<div class="content-wrapper p-5">
    <body>
        <nav class="navbar">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">HEALTH CARE</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="HealthCare@gmail.com">HealthCare@gmail.com</a></li>
                    @*<li class="nav-item"><a class="nav-link" href="https://www.examplehospital.com">Hosp</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Link 3</a></li>*@
                </ul>
            </div>
        </nav>

        <div class="invoice-wrapper">
            <div class="content-wrapper p-5">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <div class="invoice-header">
                                <h2>Invoice</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="invoice-address">
                                <h4>Bill From:</h4>
                                <address>
                                    HealthCare<br>
                                    Nagpur<br>
                                    Maharashtra<br>
                                    India<br>
                                    Phone: (123) 456-7890<br>
                                    Email: HealthCare@gmail.com
                                </address>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="invoice-address">
                                <h4>Bill To:</h4>
                                <address>
                                    @Model.PatientName<br>
                                    <div class="invoice-details">
                                        <p>Bill ID: @Model.BillID</p>
                                        <!-- Add other patient details here -->
                                    </div>
                                </address>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="invoice-body">
                                <table class="table table-bordered invoice-table">
                                    <thead>
                                        <tr>
                                            <th>Description</th>
                                            <th>Quantity</th>
                                            <th>Unit Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Product 1</td>
                                            <td>2</td>
                                            <td>$10.00</td>
                                            <td>$20.00</td>
                                        </tr>
                                        <tr>
                                            <td>Product 2</td>
                                            <td>1</td>
                                            <td>$15.00</td>
                                            <td>$15.00</td>
                                        </tr>
                                    </tbody>
                                    <tfoot class="invoice-total">
                                        <tr>
                                            <td colspan="3" class="text-right">Subtotal</td>
                                            <td>$35.00</td>
                                        </tr>
                                        <tr>
                                            <td colspan="3" class="text-right">Tax (10%)</td>
                                            <td>$3.50</td>
                                        </tr>
                                        <tr>
                                            <td colspan="3" class="text-right">Total</td>
                                            <td>$38.50</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="invoice-footer">
                                <p>Thank you for your Visit !!</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="print-button-container">
                    <button id="print" onclick="printInvoice()">Print</button>
                </div>


                <script>
                    function printInvoice() {
                        var printContents = document.documentElement.innerHTML;
                        var w = window.open();
                        w.document.write(printContents);
                        w.print();
                        w.close();
                    }
                </script>
            </div>
        </div>

    </body>
    </div>


</html>